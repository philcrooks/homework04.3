<form action="<%= @action %>" method="post">
  <table>
    <tr>
      <td><label for="name">Name:</label></td>
      <td colspan="3"><input size="50" type="text" name="name"
      <% if @album.name %>
      <%= "value=\"#{@album.name}\"" %>
      <% end %>
      ></td>
    </tr>
    <tr>
      <td><label for="artist_id">Artist:</label></td>
      <td>
        <select name="artist_id">
          <% @artists.each do | artist | %>
          <option value="<%= artist.id %> "
          <% if artist.id == @album.artist_id %>
          selected
          <% end %>
          ><%= "#{artist.name}" %></option>
          <% end %>    
        </select>
      </td>
      <td><label for="year">Year:</label></td>
      <td><input type="text" name="year"
      <% if @album.year > 0 %>
      <%= "value=\"#{@album.year}\" "%>
      <% end %>
      ></td>
    </tr>
    <tr>
      <td align="right" colspan="4"><input type="submit" value="<%= @button_text %>"></td>
    </tr>
  </table>
</form>